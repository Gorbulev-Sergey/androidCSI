<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/magnolia"
        app:subtitleTextColor="?attr/colorSecondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:background="@color/magnolia"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:background="@color/magnolia"
            app:tabBackground="@color/purpul_blue"
            app:tabIndicatorColor="@color/rouse"
            app:tabSelectedTextColor="@color/rouse"
            app:tabTextColor="@color/magnolia"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>