<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCSI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidCSI.Pink" parent="Theme.AndroidCSI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_high_dark</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_lightly</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_high_dark</item>
    </style>

    <style name="Theme.AndroidCSI.Green" parent="Theme.AndroidCSI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_high_light</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_darkly</item>
        <item name="colorSecondaryVariant">@color/gray_high_dark</item>
        <item name="colorOnSecondary">@color/gray_black</item>
    </style>

    <style name="Theme.AndroidCSI.Gray" parent="Theme.AndroidCSI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_high_dark</item>
        <item name="colorOnPrimary">@color/gray_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_white</item>
        <item name="colorSecondaryVariant">@color/gray_high_dark</item>
        <item name="colorOnSecondary">@color/gray_black</item>

        <item name="statusBarForeground">@color/gray_black</item>
    </style>

    <style name="Theme.AndroidCSI.Orange" parent="Theme.AndroidCSI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_high_dark</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/orange_high_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_darkly</item>
        <item name="colorSecondaryVariant">@color/gray_high_dark</item>
        <item name="colorOnSecondary">@color/gray_black</item>
    </style>

    <style name="Theme.AndroidCSI.Red.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/red_dark</item>
        <item name="colorControlNormal">@color/red_dark</item>
    </style>

    <style name="Theme.AndroidCSI.Pink.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/pink_high_dark</item>
        <item name="colorControlNormal">@color/pink_high_dark</item>
    </style>

    <style name="Theme.AndroidCSI.Green.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/green_high_dark</item>
        <item name="colorControlNormal">@color/green_high_dark</item>
    </style>

    <style name="Theme.AndroidCSI.Orange.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/orange_high_dark</item>
        <item name="colorControlNormal">@color/orange_high_dark</item>
    </style>
</resources>